<mvc:View
	controllerName="testing.controller.Object"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<Page>
		<content>
			<ObjectHeader
				title="{CompanyName}"
				backgroundDesign="Solid"
				number="{PhoneNumber}">
				<attributes>
					<ObjectAttribute title="Web Address" text="{WebAddress}" />
					<ObjectAttribute title="Email Address" text="{EmailAddress}" />
				</attributes>
			</ObjectHeader>
			<IconTabBar
				expanded="{device>/isNoPhone}"
				class="sapUiSmallMarginBottom sapUiResponsiveContentPadding">
				<items>
					<IconTabFilter
						text="Info">
						<f:SimpleForm
							minWidth="1024"
							maxContainerCols="2"
							layout="ResponsiveGridLayout" >
							<f:title>
								<core:Title text="{CompanyName}" />
							</f:title>
							<Label text="BusinessPartnerID: "/>
							<Text text="{BusinessPartnerID}"/>
							<Label text="LegalForm: "/>
							<Text text="{LegalForm}"/>
						</f:SimpleForm>
					</IconTabFilter>
					<IconTabFilter
						text="Attachments">
					</IconTabFilter>
				</items>
			</IconTabBar>
		</content>
	</Page>
</mvc:View>